wordWrap = hexo-config('code_word_wrap');
code-font-size = 0.9em;
code-font-family = JetBrains Mono, SFMono-Regular, Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace;
highlight-border-color = #d0d7de;

@require 'prismjs/index';

#post {
  pre {
    background: #f7f7f7;
  }

  pre, code {
    overflow: auto;
    font-size: code-font-size;
    font-family: code-font-family !important;
    border-radius: 0.3em;
  }
}

@media (max-width: 768px) {
  #post {
    pre, code {
      font-size: 0.85em;
      line-height: 1.4;
    }

    pre {
      padding: 8px 12px;
      margin: 1em 0;
    }

    pre[class*='language-'] {
      &:not(.line-numbers) {
        padding: 8px 12px;
      }

      .caption {
        font-size: 0.8em;
        margin-bottom: 0.8em;
      }
    }
  }
}

@media (max-width: 480px) {
  #post {
    pre, code {
      font-size: 0.8em;
      line-height: 1.3;
    }

    pre {
      padding: 6px 10px;
      margin: 0.8em 0;
    }

    pre[class*='language-'] {
      &:not(.line-numbers) {
        padding: 6px 10px;
      }

      .caption {
        font-size: 0.75em;
        margin-bottom: 0.6em;
      }
    }
  }
}